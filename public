    <!-- L√≥gica do Sistema -->
    <script>
        // Ingredientes b√°sicos que assumimos que o usu√°rio tem (n√£o aparecem como 'Falta')
        const pantryStaples = ['sal', 'pimenta', 'a√ß√∫car', '√≥leo', 'azeite', '√°gua', 'vinagre', 'alho', 'cebola'];
        
        // Estado Global
        let currentRecipes = [];

        // Navega√ß√£o
        function goToDashboard() {
            document.getElementById('landing-page').classList.add('hidden');
            const dashboard = document.getElementById('dashboard');
            dashboard.classList.remove('hidden');
        }

        // ==========================================
        // NOVA L√ìGICA COM OPENAI API
        // ==========================================

        async function suggestRecipes() {
            const input = document.getElementById('ingredients-input').value;
            
            if(!input.trim()) {
                alert("Por favor, digite alguns ingredientes!");
                return;
            }

            // UI Loading State
            document.getElementById('loading').classList.replace('hidden', 'flex');
            document.getElementById('results-area').classList.add('hidden');
            document.getElementById('shopping-list-container').classList.add('hidden');

            // Chama a fun√ß√£o ass√≠ncrona
            await processSearch(input);
        }

        async function processSearch(userInput) {
            // ‚ö†Ô∏è ATEN√á√ÉO: COLOQUE SUA API KEY ABAIXO
            const apiKey = "SUA_API_KEY_AQUI"; 

            // Prompt otimizado para JSON
            const promptText = `
                Voc√™ √© um chef criativo e pr√°tico. O usu√°rio tem os seguintes ingredientes: "${userInput}".
                
                Gere um array JSON com 6 sugest√µes de receitas que priorizem o uso desses ingredientes, mas voc√™ pode adicionar outros necess√°rios para o prato ficar bom.
                
                A resposta deve ser APENAS o JSON cru, sem crases de markdown, seguindo estritamente este formato para cada item:
                [
                    {
                        "title": "Nome da Receita",
                        "time": "Tempo de preparo (ex: 20 min)",
                        "tags": ["Tag1", "Tag2"],
                        "ingredients": ["lista", "completa", "de", "ingredientes", "necess√°rios"],
                        "steps": ["Passo 1 resumido", "Passo 2 resumido", "Passo 3 resumido"]
                    }
                ]
            `;

            try {
                const response = await fetch("https://api.openai.com/v1/chat/completions", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        "Authorization": `Bearer ${apiKey}`
                    },
                    body: JSON.stringify({
                        model: "gpt-4o", // Ou gpt-4-turbo / gpt-3.5-turbo
                        messages: [
                            { role: "system", content: "Voc√™ √© um assistente que responde estritamente em JSON v√°lido." },
                            { role: "user", content: promptText }
                        ],
                        temperature: 0.7
                    })
                });

                if (!response.ok) {
                    const errData = await response.json();
                    throw new Error(errData.error?.message || 'Erro na API');
                }

                const data = await response.json();
                
                // Limpeza b√°sica caso a IA mande Markdown (ex: ```json)
                let jsonString = data.choices[0].message.content;
                jsonString = jsonString.replace(/^```json/g, '').replace(/```$/g, '').trim();
                
                const recipesFromAI = JSON.parse(jsonString);

                // P√ìS-PROCESSAMENTO: Calcular 'missing' (ingredientes que faltam)
                // Compara o que a receita pede vs o que o usu√°rio digitou
                const userIngredientsList = userInput.toLowerCase().split(',').map(i => i.trim());
                
                currentRecipes = recipesFromAI.map(recipe => {
                    const missingItems = recipe.ingredients.filter(recItem => {
                        const itemLower = recItem.toLowerCase();
                        
                        // Ignora itens b√°sicos de despensa
                        if (pantryStaples.some(staple => itemLower.includes(staple))) return false;
                        
                        // Verifica se o usu√°rio tem (busca parcial simples)
                        const hasIt = userIngredientsList.some(userItem => 
                            userItem.includes(itemLower) || itemLower.includes(userItem)
                        );
                        return !hasIt;
                    });

                    return {
                        ...recipe,
                        missing: missingItems // Adiciona a propriedade necess√°ria para o layout
                    };
                });

                // Atualiza a Interface
                document.getElementById('loading').classList.replace('flex', 'hidden');
                renderRecipes(userIngredientsList);
                document.getElementById('results-area').classList.remove('hidden');
                document.getElementById('results-area').scrollIntoView({ behavior: 'smooth' });

            } catch (error) {
                console.error("Erro:", error);
                document.getElementById('loading').classList.replace('flex', 'hidden');
                alert("Erro ao buscar receitas: " + error.message + ". Verifique sua API Key no c√≥digo.");
            }
        }

        // ==========================================
        // RENDERIZA√á√ÉO E FUN√á√ïES DE UI (MANTIDAS)
        // ==========================================

        function renderRecipes(userIngredients) {
            const container = document.getElementById('recipes-grid');
            const countLabel = document.getElementById('result-count');
            container.innerHTML = ''; 

            if(currentRecipes.length === 0) {
                container.innerHTML = `<p class="col-span-2 text-center text-gray-500">Nenhuma receita encontrada.</p>`;
                return;
            }

            countLabel.innerText = `Encontramos ${currentRecipes.length} sugest√µes exclusivas`;

            currentRecipes.forEach((recipe) => {
                const tagsHtml = recipe.tags.map(t => 
                    `<span class="text-[10px] uppercase font-bold tracking-wider text-gray-500 bg-gray-100 px-2 py-1 rounded-md mr-1">${t}</span>`
                ).join('');

                let missingHtml = '';
                if(recipe.missing.length === 0) {
                    missingHtml = '<span class="text-sm text-white font-medium bg-brand-orange px-2 py-1 rounded-md"><i class="fa-solid fa-check mr-1"></i> Voc√™ tem tudo!</span>';
                } else {
                    const items = recipe.missing.map(m => capitalize(m)).join(', ');
                    missingHtml = `<p class="text-xs text-red-500 font-medium">Falta: ${items}</p>`;
                }

                const html = `
                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all flex flex-col h-full">
                        <div class="flex justify-between items-start mb-2">
                            <h4 class="font-bold text-lg text-brand-black leading-tight">${recipe.title}</h4>
                            <div class="flex items-center text-xs text-gray-400 whitespace-nowrap ml-2">
                                <i class="fa-regular fa-clock mr-1"></i> ${recipe.time}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            ${tagsHtml}
                        </div>

                        <div class="mb-4 bg-gray-50 p-3 rounded-lg">
                            ${missingHtml}
                        </div>

                        <div class="flex-grow">
                            <p class="text-xs text-gray-400 uppercase font-semibold tracking-wider mb-2">Preparo:</p>
                            <ol class="text-sm text-gray-600 list-decimal list-inside space-y-1">
                                ${recipe.steps.map(step => `<li>${step}</li>`).join('')}
                            </ol>
                        </div>
                    </div>
                `;
                container.innerHTML += html;
            });
        }

        function capitalize(str) {
            return str.charAt(0).toUpperCase() + str.slice(1);
        }

        function generateShoppingList() {
            const container = document.getElementById('shopping-list-container');
            const content = document.getElementById('shopping-list-content');
            
            let allMissingItems = [];
            // Considera todas as receitas carregadas
            currentRecipes.forEach(r => {
                if(r.missing && Array.isArray(r.missing)) {
                    allMissingItems.push(...r.missing);
                }
            });
            
            allMissingItems = [...new Set(allMissingItems)];

            if(allMissingItems.length === 0) {
                alert("Voc√™ tem todos os ingredientes para as receitas sugeridas!");
                return;
            }

            const categories = {
                'Hortifruti ü•¶': ['cebola', 'alho', 'tomate', 'cenoura', 'batata', 'lim√£o', 'couve', 'fruta', 'piment√£o', 'cheiro-verde', 'salsinha', 'verdura', 'legume'],
                'A√ßougue & Frios ü•©': ['carne', 'frango', 'bife', 'lingui√ßa', 'bacon', 'presunto', 'queijo', 'ovo', 'sardinha', 'salsicha', 'peixe'],
                'Mercearia & Gr√£os üçû': ['arroz', 'feij√£o', 'macarr√£o', 'farinha', 'a√ß√∫car', '√≥leo', 'azeite', 'molho', 'creme de leite', 'leite', 'p√£o', 'chocolate', 'trigo'],
                'Outros üßÇ': []
            };

            const grouped = {
                'Hortifruti ü•¶': [], 'A√ßougue & Frios ü•©': [], 'Mercearia & Gr√£os üçû': [], 'Outros üßÇ': []
            };

            allMissingItems.forEach(item => {
                let placed = false;
                for(const key in categories) {
                    if(key !== 'Outros üßÇ') {
                        const match = categories[key].some(keyword => item.toLowerCase().includes(keyword));
                        if(match) {
                            grouped[key].push(item);
                            placed = true;
                            break;
                        }
                    }
                }
                if(!placed) grouped['Outros üßÇ'].push(item);
            });

            content.innerHTML = '';
            for (const [catName, items] of Object.entries(grouped)) {
                if(items.length > 0) {
                    content.innerHTML += `
                        <div>
                            <h5 class="text-brand-orange font-semibold mb-2 uppercase text-sm tracking-widest">${catName}</h5>
                            <ul class="space-y-2">
                                ${items.map(i => `<li class="flex items-center gap-2"><div class="w-1.5 h-1.5 bg-white rounded-full"></div> ${capitalize(i)}</li>`).join('')}
                            </ul>
                        </div>
                    `;
                }
            }

            container.classList.remove('hidden');
            container.scrollIntoView({ behavior: 'smooth' });
        }

        function exportPDF() {
            const element = document.getElementById('dashboard');
            
            const opt = {
                margin:       0.3,
                filename:     'Receitas_CookMe_AI.pdf',
                image:        { type: 'jpeg', quality: 0.98 },
                html2canvas:  { scale: 2 },
                jsPDF:        { unit: 'in', format: 'letter', orientation: 'portrait' },
                pagebreak:    { mode: ['avoid-all', 'css', 'legacy'] }
            };

            const btns = document.querySelectorAll('button');
            btns.forEach(b => b.style.display = 'none');
            
            html2pdf().set(opt).from(element).save().then(() => {
                btns.forEach(b => b.style.display = 'inline-block');
                document.getElementById('btn-shopping-list').style.display = 'inline-block'; 
            });
        }
    </script>
