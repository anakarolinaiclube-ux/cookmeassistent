export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Use POST na rota /api/recipes" });
  }

  const OPENAI_API_KEY = process.env.OPENAI_API_KEY;

  if (!OPENAI_API_KEY) {
    return res.status(500).json({ error: "API Key não encontrada no servidor" });
  }

  try {
    const { ingredients } = req.body;

    if (!ingredients || ingredients.trim() === "") {
      return res.status(400).json({ error: "Envie os ingredientes no body: { ingredients: \"tomate, ovo\" }" });
    }

    const prompt = `
      Gere 6 receitas criativas usando estes ingredientes: "${ingredients}".
      Responda APENAS com JSON válido no formato:

      [
        {
          "title": "",
          "time": "",
          "tags": [],
          "ingredients": [],
          "steps": []
        }
      ]
    `;

    const response = await fetch("https://api.openai.com/v1/chat/completions", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        Authorization: `Bearer ${OPENAI_API_KEY}`
      },
      body: JSON.stringify({
        model: "gpt-4o",
        messages: [
          { role: "system", content: "Responda sempre em JSON puro." },
          { role: "user", content: prompt }
        ],
        temperature: 0.7
      })
    });

    const data = await response.json();

    let text = data.choices[0].message.content.trim();
    text = text.replace(/^```json/i, "").replace(/```$/i, "");

    const recipes = JSON.parse(text);

    return res.status(200).json({ recipes });

  } catch (err) {
    return res.status(500).json({ error: "Erro ao gerar receitas", details: err.message });
  }
}
